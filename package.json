{
  "name": "udemy-nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "server": "cross-env nodemon --exec 'npm start'",
    "client": "npm run start --prefix client",
    "develop": "concurrently \"npm run server\" \"npm run client\"",
    "test": "cross-env NODE_ENV=test mocha **/*.test.js",
    "test-watch": "cross-env nodemon --exec 'npm test'",
    "build": "npm install --prefix client && npm run build --prefix client && cross-env node index.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "engines": {
    "node": "10.4.1"
  },
  "author": "whitershade",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^3.5.1",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "mongodb": "^3.0.10",
    "mongoose": "^5.1.5"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "expect": "^23.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "supertest": "^3.1.0"
  }
}
